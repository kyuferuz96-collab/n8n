audit = false
fund = false
update-notifier = false
auto-install-peers = true
strict-peer-dependencies = false
prefer-workspace-packages = true
link-workspace-packages = deep
hoist = true
shamefully-hoist = true
hoist-workspace-packages = false
loglevel = warn
package-manager-strict=false
# https://github.com/pnpm/pnpm/issues/7024
package-import-method=clone-or-copy

# Required for `pnpm deploy` (non-legacy) to bundle workspace packages into the
# deployment directory. Without this, workspace deps like `@n8n/ai-workflow-builder`
# may be pulled from the registry, so local modifications won't make it into
# the Docker image.
inject-workspace-packages=true
